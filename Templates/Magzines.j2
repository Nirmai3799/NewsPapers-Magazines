        {%- set line2= ["దినికి "+Circulation +"సర్క్యులేషన్ ఉంది." ] |join('') -%}
        {{ [ line1,line2] | random }}
    {%- endif -%}

	 {%- if ISSN!= 'nan' -%}
        {%- set line1= ["దీని issn సంఖ్య "+ISSN +"."] |join('') -%}
