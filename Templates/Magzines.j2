	    {{ [ line1,line2] | random }}
	
    {%- endif -%}
	 {%- if Frequency!= 'నాన్' -%}
        {%- set line1= ["ఈ పత్రిక యొక్క ఫ్రీక్వెన్సీ "+Frequency+"." ] |join('') -%}
        {%- set line2= ["ఈ యొక్క పత్రిక ఫ్రీక్వెన్సీ ,"+Frequency+"." ] |join('') -%}
	    {{ [ line1,line2] | random }}
	
    {%- endif -%}

{%- endmacro -%}


